{
    "name": "rx/avaliacao",
    "description": "Avaliação de conhecimentos em PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Alysson Azevedo",
            "email": "alysson@rxsaude.com.br"
        }
    ],
    "autoload": {
        "psr-4": {
            "Rx\\": "src/"
        },
        "files": [
            "config/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rx\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "vendor/bin/phpcs --colors -p ./src ./tests",
        "test": "vendor/bin/phpunit -c phpunit.yml --testdox"
    }
}
